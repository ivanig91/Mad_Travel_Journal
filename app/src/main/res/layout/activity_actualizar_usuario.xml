<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.ActualizarUsuario">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivFotoInicial"
                        app:srcCompat="@drawable/p18"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="24dp"
                        app:cardBackgroundColor="#00E8D8FF"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:contentPadding="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <RadioButton
                                android:id="@+id/rbFEM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/feminismo" />

                            <RadioButton
                                android:id="@+id/rbLG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/banderas" />

                            <RadioButton
                                android:id="@+id/rbHOM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/hom" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <EditText
                        android:id="@+id/etNuevoNombre"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp" />


                </TableRow>



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btNuevoUsuario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/borderedondo"
                        android:textColor="@color/colorPrimary"
                        android:text="Actualizar" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btCargarFoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="100dp"
                        android:background="@drawable/borderedondo"
                        android:text="Cargar foto"
                        android:textColor="@color/colorPrimary" />
                </TableRow>


            </TableLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>